{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "es2022",
		"moduleResolution": "NodeNext",
		"moduleDetection": "force",
		"isolatedModules": true,
		"outDir": "out",
		"lib": [
			"es2022",
			"dom"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": false,
		"skipLibCheck": true,
		"allowJs": true
	},
	"exclude": [
		"node_modules",
		"out",
		"tools",
		"media"
	]
}
